@model IEnumerable<TrueCrimeRepo.Models.TVShowListItem>

@{
    ViewBag.Title = "Index";
}

<h2>True Crime TV Shows/Documentaries</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.TVShowID)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Channel_OnlineStream)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.TVShowID)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Channel_OnlineStream)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TVShowID }) |
                @Html.ActionLink("Details", "Details", new { id = item.TVShowID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TVShowID })
            </td>
        </tr>
        <style type="text/css">
            td {
                width: 100px;
            }

            th {
                width: 100px;
            }
        </style>
    }

</table>
