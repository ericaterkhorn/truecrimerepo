@model IEnumerable<TrueCrimeRepo.Models.CrimeListItem>

@{
    ViewBag.Title = "Index";
}
<img src="~/Images/Edgy Sportswear Etsy Banner.png" style="width: 100%">
<br/>
@*<h2>Crimes</h2>*@
<h3>Find all of our true crimes listed below. </h3>
<h4 style="color: mediumblue">To view the podcasts, tv shows, and books for the crime, select the blue "Details" box below.</h4>
<br/>
<p style="font-size: 30px">
    <a href='@Url.Action("Create")' class="btn btn-success"> ADD A NEW TRUE CRIME</a>
    @*@Html.ActionLink("Add a new true crime", "Create")*@
</p>
@if (TempData.ContainsKey("SaveResult"))
{<div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <tr style="background-color: darkgrey">
                @*<th>
                    @Html.ActionLink("Title", "Index", new { sortOrder = ViewBag.CrimeSortParm})
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                @*<th>
                @Html.DisplayNameFor(model => model.Year)
                 </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.IsCrimeSolved)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Perpetrator)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th class="col-md-3">
                    To view details, edit, or delete, please click below.
                </th>
            </tr>


            @foreach (var item in Model.OrderBy(Model=>Model.Title))
            {
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCrimeSolved)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.Year)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Perpetrator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CrimeID }, new { @class = "btn btn-warning" })


                @Html.ActionLink("Details", "Details", new { id = item.CrimeID }, new { @class = "btn btn-primary" })


                @Html.ActionLink("Delete", "Delete", new { id = item.CrimeID }, new { @class = "btn btn-danger" })

            </td>
            </tr>
            }
        </table>

    </div>
</div>

<style type="text/css">
    td {
        width: 100px;
    }

    th {
        width: 100px;
    }
</style>

