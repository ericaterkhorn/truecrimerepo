@model IEnumerable<TrueCrimeRepo.Models.CrimeListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Crimes</h2>
<p>Find all of our true crimes listed below. </p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{<div class="alert alert-success fade in" role="alert">
    @ViewBag.SaveResult
    <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
    </button>
    @TempData["SaveResult"]
</div>
}
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.CrimeID)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Year)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Perpetrator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsSolved)
        </th>
        <th>
            To view details, edit, or delete, please click below.
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.CrimeID)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Perpetrator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSolved)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CrimeID }) |
                @Html.ActionLink("Details", "Details", new { id = item.CrimeID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CrimeID })
            </td>
        </tr>
    }

</table>
